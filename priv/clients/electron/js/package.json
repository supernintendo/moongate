{
  "name": "moongate-electron-client",
  "version": "1.0.0",
  "description": "Development shell for the Moongate server platform",
  "main": "dist/main.js",
  "scripts": {
    "build": "npm run build:main && npm run build:renderer && npm run build:moongateElectronClient",
    "build:main": "MOONGATE_ELECTRON_CLIENT_BUILD_STEP=main webpack",
    "build:moongateElectronClient": "MOONGATE_ELECTRON_CLIENT_BUILD_STEP=moongateElectronClient webpack",
    "build:renderer": "MOONGATE_ELECTRON_CLIENT_BUILD_STEP=renderer webpack",
    "start": "electron .",
    "watch": "webpack --progress --colors --watch"
  },
  "author": "Michael Matyi",
  "license": "Apache-2.0",
  "private": true,
  "devDependencies": {
    "chai": "^3.5.0",
    "deepmerge": "^1.3.2",
    "electron": "1.6.10",
    "electron-builder": "^18.1.0",
    "mocha": "^3.4.2",
    "static-loader": "^0.1.8",
    "ts-loader": "^2.1.0",
    "tslint": "^3.5.0",
    "tslint-loader": "^2.1.0",
    "typescript": "^1.8.2",
    "webpack": "^1.12.14",
    "yargs": "^4.2.0"
  },
  "dependencies": {
    "electron-default-menu": "^1.0.1"
  },
  "build": {
    "appId": "net.matyi.moongate-electron-client.moongate"
  }
}
